# Backend environment example for OpenAI/Anthropic/Bedrock
# Modo privado: si lo pones en true ignora autenticación; con USE_REAL_LLM_IN_PRIVATE_MODE podrás usar LLM real sin login.
PRIVATE_MODE=false
USE_REAL_LLM_IN_PRIVATE_MODE=false

# OpenAI (real)
OPENAI_API_KEY=sk-coloca-tu-clave-aqui
OPENAI_API_VERSION=2024-12-01-preview

# Agentes (ajusta TYPE/ID por agente)
CLASSIFIER_AGENT_MODEL_TYPE=openai
CLASSIFIER_AGENT_MODEL_ID=gpt-4o-mini

TITLE_AGENT_MODEL_TYPE=openai
TITLE_AGENT_MODEL_ID=gpt-4o-mini

PLANNER_AGENT_MODEL_TYPE=openai
PLANNER_AGENT_MODEL_ID=gpt-4o-mini

SUGGESTOR_AGENT_MODEL_TYPE=openai
SUGGESTOR_AGENT_MODEL_ID=gpt-4o-mini

COMPUTER_USE_AGENT_MODEL_TYPE=openai
COMPUTER_USE_AGENT_MODEL_ID=gpt-4o

# Anthropic (alternativa)
# ANTHROPIC_API_KEY=anthropic-key-aqui
# CLASSIFIER_AGENT_MODEL_TYPE=anthropic
# CLASSIFIER_AGENT_MODEL_ID=claude-3-7-sonnet-20250219
# TITLE_AGENT_MODEL_TYPE=anthropic
# TITLE_AGENT_MODEL_ID=claude-3-7-sonnet-20250219

# Bedrock (alternativa)
# BEDROCK_REGION=us-east-1
# CLASSIFIER_AGENT_MODEL_TYPE=bedrock
# CLASSIFIER_AGENT_MODEL_ID=anthropic.claude-3-7-sonnet-20250219-v1:0

# Whisper local (modelos: tiny, base, small, medium, large)
WHISPER_MODEL=small
WHISPER_COMPUTE_TYPE=int8

# Almacenamiento local
LOCAL_STORAGE_DIR=./local_storage
